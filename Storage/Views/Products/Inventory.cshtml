@model IEnumerable<Storage.Models.ProductViewModel>

<h2>Inventory Overview</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Count</th>
            <th>Inventory Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Count</td>
                <td>@item.InventoryValue</td>
            </tr>
        }
    </tbody>
</table>